<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.klein.todo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="ToDo_Login"/>
        <activity
            android:name=".AddUserActivity"
            android:label="AddUserActivity"
            android:noHistory="false" />
        <activity
            android:name=".AddNoteActivity"
            android:label="@string/title_activity_add_entry" />
        <activity
            android:name=".ToDoListActivity"
            android:label="ToDo_List"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AccountSettingsActivity"
            android:label="@string/title_activity_account_settings"></activity>
    </application>

</manifest>
